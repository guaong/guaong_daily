<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_list_overlay_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282e3b"
    tools:context="io.guaong.tennews.activity.OverlayNewsListActivity">

    <ProgressBar
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a_list_overlay_progress" />

    <TextView
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="30sp"
        android:text="@string/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_list_overlay_text" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/a_list_overlay_text"
        android:id="@+id/a_list_overlay_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
